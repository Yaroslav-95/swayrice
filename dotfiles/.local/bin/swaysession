#!/bin/sh

[ "$(cat /proc/1/comm)" = "systemd" ] && logind=systemctl || logind=loginctl

case "$1" in
    lock)
        lock-color
        ;;
    logout)
        canberra-gtk-play -i Oxygen-Sys-Log-Out & sleep 1
        swaymsg exit
        clear
        if [ ! -e ~/.cache/dont-kill ]; then
        	killall -u $(whoami)
        fi
        ;;
    switch_user)
        dm-tool switch-to-greeter
        ;;
    suspend)
        lock-color & sleep 1 && $logind suspend
        ;;
    hibernate)
        lock-color & sleep 1 && $logind hibernate
        ;;
    reboot)
        canberra-gtk-play -i Oxygen-Sys-Log-Out & sleep 1
        clear
        swaymsg exit
        sudo reboot now
        ;;
    poweroff)
        canberra-gtk-play -i Oxygen-Sys-Log-Out & sleep 1
        clear
        swaymsg exit
        # Having problems with logind poweroff and reboot after sway exit
        sudo poweroff now
        ;;
    *)
        if [ "$SWAYSESSION_GUI" = 1 ]; then
			notify-send "ðŸ–¥ swaysession" "Invalid option"
        else
        	echo "swaysession: missing or invalid argument"
        fi
        exit 2
esac

exit 0

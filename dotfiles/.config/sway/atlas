# vim: filetype=i3

# Configuration specific to my desktop computer

# Log in sound
exec sleep 12 && canberra-gtk-play -i Oxygen-Sys-Log-In-Short

# Outputs
output "DP-1" background ~/.config/wall1.png fill #000000
output "DP-1" mode 2560x1440@165Hz
output "DP-1" render_bit_depth 10
output "HDMI-A-1" background ~/.config/wall2.png fill #000000

# Workspaces
workspace $ws1 output DP-1
workspace $ws2 output DP-1
workspace $ws3 output DP-1
workspace $ws4 output DP-1
workspace $ws5 output DP-1
workspace $ws6 output DP-1
workspace $ws7 output HDMI-A-1
workspace $ws8 output HDMI-A-1
workspace $ws9 output HDMI-A-1
workspace $ws10 output HDMI-A-1

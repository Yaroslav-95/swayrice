    # position top
    # separator_symbol  "|"

    # status_command i3blocks

    # colors {
        # statusline #ffffff
        # background #000000AA
        # active_workspace #689d6a #323232 #689d6a
        # focused_workspace #8ec07c #689d6a #ffffff
    # }
# }
